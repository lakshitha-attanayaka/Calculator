<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.LoginUI"
             Title="LoginUI">
    <VerticalStackLayout Padding="40" VerticalOptions="Center">
        <Label TextColor="Red" Padding="10" FontSize="20" VerticalOptions="Center">  Welcome</Label>
        <Entry Placeholder="Username" TextColor="Black" PlaceholderColor="Gray" Text="{Binding UserName}" ></Entry>
        <Entry Placeholder="Password" IsPassword="True"  TextColor="Black" PlaceholderColor="Gray" Text="{Binding Password}" ></Entry>

        <Button 
            Text="Login" 
            Command="{Binding TapCommand}"></Button>
        
    </VerticalStackLayout>
</ContentPage>